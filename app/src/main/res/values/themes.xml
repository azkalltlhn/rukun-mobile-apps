<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RuKun" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange400</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>
    <!-- Style for Heading 1 -->
    <style name="Heading1">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Style for Heading 2 -->
    <style name="Heading2">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/neutral500</item>
    </style>
    <!-- Style for Heading 2 -->
    <style name="Heading3">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/neutral500</item>
    </style>
    <!-- Style for Heading 4 -->
    <style name="Heading4">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral500</item>
    </style>
    <style name="Heading6">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/neutral500</item>
    </style>
    <!-- Style for Body 1 -->
    <style name="Body1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/neutral400</item>
    </style>
    <!-- Style for Body 3 -->
    <style name="Body3">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral400</item>
    </style>
    <!-- Style for Body 4 -->
    <style name="Body4">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral400</item>
    </style>
    <!-- Style for Body 5 -->
    <style name="Body5">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/neutral400</item>
    </style>
    <!-- Style for Caption 2 -->
    <style name="Caption2">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Style for Caption 3 -->
    <style name="Caption3">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Style for Caption 4 -->
    <style name="Caption4">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Bold1">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for Custom Button -->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange400</item>
        <item name="android:padding">8dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Style for TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextInputLayout.HintText</item>
        <item name="boxStrokeColor">@color/neutral300</item>        <item name="boxBackgroundColor">@android:color/transparent</item> <!-- Pastikan latar belakang transparan agar warna border terlihat -->        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>

        <!-- Add other TextInputLayout customizations here -->
    </style>
    <!-- Style for TextInputLayout hint text -->
    <style name="TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral400</item>
        <!-- Add other TextInputLayout hint text customizations here -->
    </style>

    <!--navbar -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/orange300</item>
        <item name="itemIconTint">@color/orange800</item>
        <item name="itemTextColor">@color/neutral400</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/orange600</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/pop_up_menu_bg</item>
    </style>

    <!-- Define TextAppearance for TabLayout -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Define the TabLayout style -->
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/orange400</item>
        <item name="tabSelectedTextColor">@color/orange400</item>
        <item name="tabTextColor">@color/neutral300</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="Theme.RuKun" parent="Base.Theme.RuKun" />
</resources>