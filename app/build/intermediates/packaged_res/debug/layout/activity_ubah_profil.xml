<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_back"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubah Foto Profil"
            style="@style/Heading2"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Foto Profil dan Tombol Kamera -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <!-- Foto Profil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/profile"/>

        <!-- Tombol Kamera -->
        <ImageButton
            android:id="@+id/button_Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/imageProfile"
            android:layout_alignBottom="@id/imageProfile"
            android:background="@android:color/transparent"
            android:contentDescription="Ubah Foto"
            android:onClick="launchCamera"
            android:src="@drawable/icon_camera" />
    </RelativeLayout>

    <!-- Konten Utama -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textEditProfileNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textColor="@color/neutral400"
                    android:layout_marginTop="16dp"
                    style="@style/Body3"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEditProfileNama"
                    android:layout_marginTop="8dp"
                    app:hintEnabled="false"
                    style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama User"
                        android:inputType="none"
                        android:focusable="false"
                        style="@style/TextInputLayout.HintText"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textEditProfileNIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIM / NIP"
                    android:textColor="@color/neutral400"
                    android:layout_marginTop="16dp"
                    style="@style/Body3"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEditProfileNama"
                    android:layout_marginTop="8dp"
                    app:hintEnabled="false"
                    style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nim"
                        style="@style/TextInputLayout.HintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="NIM"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/textEditProfileProdi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prodi / Jabatan"
                    android:textColor="@color/neutral400"
                    android:layout_marginTop="16dp"
                    style="@style/Body3"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutProdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEditProfileNama"
                    android:layout_marginTop="8dp"
                    app:hintEnabled="false"
                    style="@style/TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prodi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Prodi"
                        android:inputType="none"
                        android:focusable="false"
                        style="@style/TextInputLayout.HintText"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/ButtonSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/Button"
                    android:text="Simpan" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
